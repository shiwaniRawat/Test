<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#838bf4"
    tools:context="com.example.gb.test.MainActivity"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:background="#0c1dfd">

        <TextView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_weight="4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp">

        <TextView
            android:layout_width="10dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:background="#e43f3f" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="10dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:background="#433e3e"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="10dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:background="#705252"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="10dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:background="#ea5605" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="10dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:background="#9906f4"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="10dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:background="#f50589"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:background="#0d6102"
            android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="3"
        android:background="#055c87"/>

</LinearLayout>

</RelativeLayout>
